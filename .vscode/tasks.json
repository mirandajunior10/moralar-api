{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "publishProfile",
            "type": "pickString",
            "default": "Development",
            "description": "Definir qual publish profile deve ser usado",
            "options": [
                "Development",
                "Homolog",
                "Production"
            ]
        },
        {
            "id": "urlOpen",
            "type": "pickString",
            "default": "https://apidev.megaleios.com/ApiMoralarDev/swagger",
            "description": "selecionar url que deve se aberta no browser",
            "options": [
                "https://apidev.megaleios.com/ApiMoralarDev/swagger",
                "https://apihom.megaleios.com/ApiMoralarHml/swagger",
                "https://api-Moralar.megaleios.com/swagger"
            ]
        }
    ],
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "args": [
                "build",
                "${workspaceFolder}/src/Moralar.WebApi/Moralar.WebApi.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "DEPLOY",
            "presentation": {
                "reveal": "silent"
            },
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "type": "shell",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}/src/Moralar.WebApi/Moralar.WebApi.csproj",
                "/p:DeployOnBuild=true",
                "/p:WarningLevel=0",
                "/p:PublishProfile=${input:publishProfile}",
                "/p:Configuration=${input:publishProfile}",
                "/p:Username=Fabricio",
                "/p:Password=@#lei@s6890"
            ],
            "problemMatcher": []
        },
        {
            "label": "API",
            "type": "process",
            "command": "explorer",
            "dependsOn": "DEPLOY",
            "group": "build",
            "args": [
                "${input:urlOpen}"
            ]
        }
    ]
}